<Page x:Class="IOHelper.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="600"
      Title="Home">

    <Grid Margin="100,10,100,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
            <RowDefinition Height="65" />
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            Grid.Row="1"
            Name="DirectoryResorterButton"
            Click="DirectoryResorterButton_Click">
            Directory Re-Sorter
        </Button>

        <Button
            Grid.Row="2"
            Name="PrefixerButton"
            Margin="0,15,0,15"
            Click="PrefixerButton_Click">
            Prefixer
        </Button>

        <Button
            Grid.Row="3"
            Name="SuffixerButton"
            Click="SuffixerButton_Click">
            Suffixer
        </Button>
    </Grid>
</Page>